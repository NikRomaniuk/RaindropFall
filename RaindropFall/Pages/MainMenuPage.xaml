<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaindropFall.Pages.MainMenuPage"
             Title="Menu">

    <VerticalStackLayout Padding="24"
                         Spacing="16"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Button Text="Go to Level 1" Clicked="OnLevel1Clicked" WidthRequest="220"/>
        <Button Text="Go to Level 2" Clicked="OnLevel2Clicked" WidthRequest="220"/>
        <Button Text="Exit" Clicked="OnExitClicked" WidthRequest="220"/>
    </VerticalStackLayout>
</ContentPage>
